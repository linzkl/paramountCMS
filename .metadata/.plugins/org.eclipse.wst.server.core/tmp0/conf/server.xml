--><!-- Note:  A "Server" is not itself a "Container", so you may not
     define subcomponents such as "Valves" at this level.
     Documentation at /docs/config/server.html
 --><Server port="8005" shutdown="SHUTDOWN">
    <Listener className="org.apache.catalina.startup.VersionLoggerListener"/>
    <!-- Security listener. Documentation at /docs/config/listeners.html
    <Listener className="org.apache.catalina.security.SecurityListener" />
    -->
    <!--APR library loader. Documentation at /docs/apr.html -->
    <Listener SSLEngine="on" className="org.apache.catalina.core.AprLifecycleListener"/>
    <!-- Prevent memory leaks due to use of particular java/javax APIs-->
    <Listener className="org.apache.catalina.core.JreMemoryLeakPreventionListener"/>
    <Listener className="org.apache.catalina.mbeans.GlobalResourcesLifecycleListener"/>
    <Listener className="org.apache.catalina.core.ThreadLocalLeakPreventionListener"/>

    <!-- Global JNDI resources
         Documentation at /docs/jndi-resources-howto.html
    -->
    <GlobalNamingResources>
        <!-- Editable user database that can also be used by
             UserDatabaseRealm to authenticate users
        -->
        <Resource auth="Container" description="User database that can be updated and saved" factory="org.apache.catalina.users.MemoryUserDatabaseFactory" name="UserDatabase" pathname="conf/tomcat-users.xml" type="org.apache.catalina.UserDatabase"/>

        <!--<Resource
                name="jdbc/referenceData"
                auth="Container"
                type="javax.sql.DataSource"
                description="Reference Data DS"
                username="SA"
                password=""
                driverClassName="org.hsqldb.jdbcDriver"
                url="jdbc:hsqldb:file:///usr/share/apache-tomcat-8.5.4/appConfig/reference-data"/>-->

        <Resource auth="${JDBC.epfPreferenceDataSource.auth}" driverClassName="${JDBC.epfPreferenceDataSource.driverClassName}" factory="${JDBC.epfPreferenceDataSource.factory}" initialSize="${JDBC.epfPreferenceDataSource.initialSize}" maxActive="${JDBC.epfPreferenceDataSource.maxActive}" minEvictableIdleTimeMillis="${JDBC.epfPreferenceDataSource.minEvictableIdleTimeMillis}" minIdle="${JDBC.epfPreferenceDataSource.minIdle}" name="${JDBC.epfPreferenceDataSource.name}" password="${JDBC.epfPreferenceDataSource.password}" testOnBorrow="${JDBC.epfPreferenceDataSource.testOnBorrow}" testWhileIdle="${JDBC.epfPreferenceDataSource.testWhileIdle}" timeBetweenEvictionRunsMillis="${JDBC.epfPreferenceDataSource.timeBetweenEvictionRunsMillis}" type="${JDBC.epfPreferenceDataSource.type}" url="${JDBC.epfPreferenceDataSource.url}" username="${JDBC.epfPreferenceDataSource.userName}" validationInterval="${JDBC.epfPreferenceDataSource.validationInterval}" validationQuery="${JDBC.epfPreferenceDataSource.validationQuery}"/>

        <Resource auth="${JDBC.epfAuditDataSource.auth}" driverClassName="${JDBC.epfAuditDataSource.driverClassName}" factory="${JDBC.epfAuditDataSource.factory}" initialSize="${JDBC.epfAuditDataSource.initialSize}" maxActive="${JDBC.epfAuditDataSource.maxActive}" minEvictableIdleTimeMillis="${JDBC.epfAuditDataSource.minEvictableIdleTimeMillis}" minIdle="${JDBC.epfAuditDataSource.minIdle}" name="${JDBC.epfAuditDataSource.name}" password="${JDBC.epfAuditDataSource.password}" testOnBorrow="${JDBC.epfAuditDataSource.testOnBorrow}" testWhileIdle="${JDBC.epfAuditDataSource.testWhileIdle}" timeBetweenEvictionRunsMillis="${JDBC.epfAuditDataSource.timeBetweenEvictionRunsMillis}" type="${JDBC.epfAuditDataSource.type}" url="${JDBC.epfAuditDataSource.url}" username="${JDBC.epfAuditDataSource.userName}" validationInterval="${JDBC.epfAuditDataSource.validationInterval}" validationQuery="${JDBC.epfAuditDataSource.validationQuery}"/>

        <Resource auth="${JDBC.upfFeatureToggleDataSource.auth}" driverClassName="${JDBC.upfFeatureToggleDataSource.driverClassName}" factory="${JDBC.upfFeatureToggleDataSource.factory}" initialSize="${JDBC.upfFeatureToggleDataSource.initialSize}" maxActive="${JDBC.upfFeatureToggleDataSource.maxActive}" minEvictableIdleTimeMillis="${JDBC.upfFeatureToggleDataSource.minEvictableIdleTimeMillis}" minIdle="${JDBC.upfFeatureToggleDataSource.minIdle}" name="${JDBC.upfFeatureToggleDataSource.name}" password="${JDBC.upfFeatureToggleDataSource.password}" testOnBorrow="${JDBC.upfFeatureToggleDataSource.testOnBorrow}" testWhileIdle="${JDBC.upfFeatureToggleDataSource.testWhileIdle}" timeBetweenEvictionRunsMillis="${JDBC.upfFeatureToggleDataSource.timeBetweenEvictionRunsMillis}" type="${JDBC.upfFeatureToggleDataSource.type}" url="${JDBC.upfFeatureToggleDataSource.url}" username="${JDBC.upfFeatureToggleDataSource.userName}" validationInterval="${JDBC.upfFeatureToggleDataSource.validationInterval}" validationQuery="${JDBC.upfFeatureToggleDataSource.validationQuery}"/>

        <!-- OpenSource UPF JMS Resources -->
        <Resource auth="${JMS.epfAuditConnectionFactory.auth}" brokerName="${JMS.epfAuditConnectionFactory.brokerName}" brokerURL="${JMS.epfAuditConnectionFactory.brokerURL}" description="JMS Connection Factory" factory="${JMS.epfAuditConnectionFactory.factory}" name="${JMS.epfAuditConnectionFactory.factoryName}" type="${JMS.epfAuditConnectionFactory.type}"/>

        <Resource auth="${JMS.epfAuditQueue.auth}" description="Audit Queue" factory="${JMS.epfAuditQueue.factory}" name="${JMS.epfAuditQueue.name}" physicalName="${JMS.epfAuditQueue.physicalName}" type="${JMS.epfAuditQueue.type}"/>

        <Resource auth="${JMS.epfAuditErrorQueue.auth}" description="Audit Error Queue" factory="${JMS.epfAuditErrorQueue.factory}" name="${JMS.epfAuditErrorQueue.name}" physicalName="${JMS.epfAuditErrorQueue.physicalName}" type="${JMS.epfAuditErrorQueue.type}"/>

        <!-- OpenSource UPF Environment Variables -->
        <Environment name="${ENV.suppress.audit.logging.name}" type="${ENV.suppress.audit.logging.type}" value="${ENV.suppress.audit.logging.value}"/>

        <Environment name="${ENV.audit.metadata.delimiter.name}" type="${ENV.audit.metadata.delimiter.type}" value="${ENV.audit.metadata.delimiter.value}"/>

    </GlobalNamingResources>

    <!-- A "Service" is a collection of one or more "Connectors" that share
         a single "Container" Note:  A "Service" is not itself a "Container",
         so you may not define subcomponents such as "Valves" at this level.
         Documentation at /docs/config/service.html
     -->
    <Service name="Catalina">

        <!--The connectors can use a shared executor, you can define one or more named thread pools-->
        <!--
        <Executor name="tomcatThreadPool" namePrefix="catalina-exec-"
            maxThreads="150" minSpareThreads="4"/>
        -->


        <!-- A "Connector" represents an endpoint by which requests are received
             and responses are returned. Documentation at :
             Java HTTP Connector: /docs/config/http.html (blocking & non-blocking)
             Java AJP  Connector: /docs/config/ajp.html
             APR (HTTP/AJP) Connector: /docs/apr.html
             Define a non-SSL/TLS HTTP/1.1 Connector on port 9000
        -->
        <Connector connectionTimeout="20000" port="9000" protocol="HTTP/1.1" redirectPort="8443"/>
        <!-- A "Connector" using the shared thread pool-->
        <!--
        <Connector executor="tomcatThreadPool"
                   port="9000" protocol="HTTP/1.1"
                   connectionTimeout="20000"
                   redirectPort="8443" />
        -->
        <!-- Define a SSL/TLS HTTP/1.1 Connector on port 8443
             This connector uses the NIO implementation that requires the JSSE
             style configuration. When using the APR/native implementation, the
             OpenSSL style configuration is required as described in the APR/native
             documentation -->
        <!--
        <Connector port="8443" protocol="org.apache.coyote.http11.Http11NioProtocol"
                   maxThreads="150" SSLEnabled="true" scheme="https" secure="true"
                   clientAuth="false" sslProtocol="TLS" />
        -->

        <!-- Define an AJP 1.3 Connector on port 8009 -->
        <Connector port="8009" protocol="AJP/1.3" redirectPort="8443"/>


        <!-- An Engine represents the entry point (within Catalina) that processes
             every request.  The Engine implementation for Tomcat stand alone
             analyzes the HTTP headers included with the request, and passes them
             on to the appropriate Host (virtual host).
             Documentation at /docs/config/engine.html -->

        <!-- You should set jvmRoute to support load-balancing via AJP ie :
        <Engine name="Catalina" defaultHost="localhost" jvmRoute="jvm1">
        -->
        <Engine defaultHost="localhost" name="Catalina">

            <!--For clustering, please take a look at documentation at:
                /docs/cluster-howto.html  (simple how to)
                /docs/config/cluster.html (reference documentation) -->
            <!--
            <Cluster className="org.apache.catalina.ha.tcp.SimpleTcpCluster"/>
            -->

            <!-- Use the LockOutRealm to prevent attempts to guess user passwords
                 via a brute-force attack -->
            <Realm className="org.apache.catalina.realm.LockOutRealm">
                <!-- This Realm uses the UserDatabase configured in the global JNDI
                     resources under the key "UserDatabase".  Any edits
                     that are performed against this UserDatabase are immediately
                     available for use by the Realm.  -->
                <Realm className="org.apache.catalina.realm.UserDatabaseRealm" resourceName="UserDatabase"/>
            </Realm>

            <Host appBase="webapps" autoDeploy="true" className="com.capitalone.chassis.tomcat.DeployOrderHost" name="localhost" unpackWARs="true">

                <!-- SingleSignOn valve, share authentication between web applications
                     Documentation at: /docs/config/valve.html -->
                <!--
                <Valve className="org.apache.catalina.authenticator.SingleSignOn" />
                -->

                <!-- Access log processes all example.
                     Documentation at: /docs/config/valve.html
                     Note: The pattern used is equivalent to using pattern="common" -->
                <Valve className="org.apache.catalina.valves.AccessLogValve" directory="logs" pattern="%h %l %u %t &quot;%r&quot; %s %b" prefix="localhost_access_log" suffix=".txt"/>

                <!-- UPF Valve -->
                <Valve className="com.capitalone.upf.openupf.security.authentication.valve.UpfRequestContextThreadLocalValve"/>

                
                
                

            <Context docBase="/home/vagrant/git/paramountCMS/.metadata/.plugins/org.eclipse.wst.server.core/tmp0/wtpwebapps/ROOT" path="" reloadable="false"/><Context docBase="/home/vagrant/git/paramountCMS/.metadata/.plugins/org.eclipse.wst.server.core/tmp0/wtpwebapps/paramountCMS" path="/paramountCMS" reloadable="true" source="org.eclipse.jst.jee.server:paramountCMS"/><Context docBase="/home/vagrant/git/paramountCMS/.metadata/.plugins/org.eclipse.wst.server.core/tmp0/wtpwebapps/cms" path="/cms" reloadable="true" source="org.eclipse.jst.j2ee.server:cms"/></Host>
        </Engine>
    </Service>
</Server>